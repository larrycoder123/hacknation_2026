# SupportMind Backend Environment Configuration
# Copy this file to .env and fill in your values

# Application settings
APP_NAME="SupportMind Backend"
DEBUG=false

# OpenAI-compatible LLM API Configuration
# For OpenAI:
LLM_API_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=your-api-key-here
LLM_MODEL=gpt-4o-mini

# For local LLM (Ollama, LM Studio, etc.):
# LLM_API_BASE_URL=http://localhost:11434/v1
# LLM_API_KEY=
# LLM_MODEL=llama3.2

# For Azure OpenAI:
# LLM_API_BASE_URL=https://your-resource.openai.azure.com/openai/deployments/your-deployment
# LLM_API_KEY=your-azure-key
# LLM_MODEL=gpt-4

# LLM Parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048
